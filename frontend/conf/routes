# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

GET         /                                                               controllers.HomeController.index(language: String = "pl")
GET         /pl/                                                            controllers.HomeController.index(language: String = "pl")
GET         /en/                                                            controllers.HomeController.index(language: String = "en")

#GET     /                           controllers.HomeController.index

GET         /rest/:centerlat/:centerlon/:dateFrom/:dateTo/:eventType        controllers.RestController.getMarkers(centerlat: Double, centerlon: Double, dateFrom: String, dateTo: String, eventType: String)
GET         /assets/*file                                                   controllers.Assets.versioned(file)
POST        /upload/                                                        controllers.RecordConsumerController.saveRecord()
GET         /pictures/:file                                                 controllers.PicturesController.picture(file)
GET         /pictures_min/:file                                             controllers.PicturesController.minPicture(file)
GET         /messages/                                                      controllers.HomeController.messages(language: String = "pl")
GET         /en/messages/                                                   controllers.HomeController.messages(language: String = "en")
